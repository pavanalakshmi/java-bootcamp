<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/jdbc</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">password123</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="hibernate.entity.Employee" />
        <mapping class="hibernate.entity.Course" />
        <mapping class="hibernate.entity.Department" />
        <mapping class="hibernate.entity.EmployeeDetails" />
        <mapping class="hibernate.entity.Student" />
        <mapping class="org.pavani.multithreading.trading_multithreading.entity.JournalEntry" />
        <mapping class="org.pavani.multithreading.trading_multithreading.entity.TradePayloads" />
        <mapping class="org.pavani.multithreading.trading_multithreading.entity.Positions" />

    </session-factory>
</hibernate-configuration>